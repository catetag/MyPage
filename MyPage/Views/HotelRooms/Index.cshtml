@model IEnumerable<MyPage.Models.HotelRooms>

@{
    ViewBag.Title = "HotelRooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Index</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Edit Selection</th>
        <th>
            @Html.DisplayNameFor(model => model.FKHotelID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Images)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OperatorRoomCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PMSRoomCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomBonus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecorderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecorderUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifierDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifierUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookeraVerilebilir)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxAdult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxChild)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxInfant)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                <a href="@Url.Action("Edit", new { id = item.PKID })"><i class="fa fa-edit"></i></a>
                <a href="@Url.Action("Details", new { id = item.PKID })"><i class="bi bi-clipboard2"></i></a>
                <a href="@Url.Action("Delete", new { id = item.PKID })"><i class="bi bi-trash3"></i></a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FKHotelID)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomName)
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Oda Ayrıntıları
                </button>

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Oda Ayrıntıları</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <iframe width= "475" srcdoc='@Html.Raw(item.Description)'></iframe>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Kapat</button>
                                
                            </div>
                        </div>
                    </div>
                </div>

                

            </td>
            <td>

                @{
                    var hotelimg = item.Images as string;
                    if (!string.IsNullOrEmpty(hotelimg) && hotelimg.Length > 40)
                    {
                        hotelimg = hotelimg.Substring(0, 40);
                    }
                }
                @Html.DisplayFor(modelItem => hotelimg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperatorRoomCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PMSRoomCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomBonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecorderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecorderUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifierDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifierUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            <td>
                    
                <input type="checkbox" checked="@(item.BookeraVerilebilir ?? false)" disabled="disabled">                   
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAdult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxChild)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxInfant)
            </td>
        </tr>
    }

</table>
